@model FightMatrix.Models.Fighter

@{ Layout = null;}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.ID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Height" class="control-label"></label>
                        <input asp-for="Height" class="form-control" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select asp-for="Category" class="form-control">
                            <option>Flyweight</option>
                            <option>Bantamweight</option>
                            <option>Featherweight</option>
                            <option>Lightweight</option>
                            <option>Welterweight</option>
                            <option>Middleweight</option>
                            <option>LightHeavyweight</option>
                            <option>Heavyweight+</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DebutDate" class="control-label"></label>
                        <input asp-for="DebutDate" class="form-control" />
                        <span asp-validation-for="DebutDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Promotion" class="control-label"></label>
                        <input asp-for="Promotion" class="form-control" />
                        <span asp-validation-for="Promotion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Wins" class="control-label"></label>
                        <input asp-for="Wins" class="form-control" />
                        <span asp-validation-for="Wins" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Loses" class="control-label"></label>
                        <input asp-for="Loses" class="form-control" />
                        <span asp-validation-for="Loses" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Draws" class="control-label"></label>
                        <input asp-for="Draws" class="form-control" />
                        <span asp-validation-for="Draws" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="NC" class="control-label"></label>
                        <input asp-for="NC" class="form-control" />
                        <span asp-validation-for="NC" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
